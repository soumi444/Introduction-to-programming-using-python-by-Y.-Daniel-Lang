# We will need to update the distance function to include the z-coordinate

def distance(x1,y1,z1,x2,y2,z2):
    return ((x2-x1)**2+(y2-y1)**2+(z2-z1)**2)**0.5

def nearestPoints(points):
    p1,p2 = 0,1

    shortestDistance = distance(points[p1][0], points[p1][1], points[p1][2],points[p2][0],points[p2][1],points[p2][2])

    for i in range(len(points)):
        for j in range(i+1, len(points)):
            d = distance(points[i][0],points[i][1], points[i][2], points[j][0], points[j][1], points[j][2])

            if shortestDistance > d:
                p1,p2 = i,j
                shortestDistance = d

    return p1,p2

